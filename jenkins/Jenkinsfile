pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "flask-devops-app:v1"
        DOCKER_REGISTRY = ""   // Set your registry if pushing
        DOCKER_CREDENTIALS = "docker-hub-credentials"
    }

    stages {
        stage('Checkout SCM') {
            steps {
                git branch: 'main', url: 'https://github.com/Malikawais108/aws-devops-cicd-project.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh "docker build -t ${DOCKER_IMAGE} -f docker/Dockerfile ."
                }
            }
        }

        stage('Test Container') {
            steps {
                script {
                    // Generate a random free port between 5000-5999
                    def randomPort = 5000 + new Random().nextInt(1000)
                    env.TEST_PORT = "${randomPort}"
                    env.TEST_CONTAINER = "test-flask-devops-app-${env.BUILD_NUMBER}"

                    // Remove container if exists
                    sh "docker rm -f ${env.TEST_CONTAINER} || true"

                    // Run container with dynamic port
                    sh "docker run -d --name ${env.TEST_CONTAINER} -p ${env.TEST_PORT}:5000 ${DOCKER_IMAGE}"
                    echo "Test container running on port ${env.TEST_PORT}"
                }
            }
        }

        stage('Docker Login & Push') {
            when {
                expression { return env.DOCKER_REGISTRY != '' }
            }
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: "${DOCKER_CREDENTIALS}", usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                        sh "echo $DOCKER_PASS | docker login ${DOCKER_REGISTRY} -u $DOCKER_USER --password-stdin"
                        sh "docker tag ${DOCKER_IMAGE} ${DOCKER_REGISTRY}/${DOCKER_IMAGE}"
                        sh "docker push ${DOCKER_REGISTRY}/${DOCKER_IMAGE}"
                    }
                }
            }
        }

        stage('Deploy to Kubernetes (Optional)') {
            steps {
                script {
                    sh "kubectl apply -f k8s/deployment.yaml"
                }
            }
        }
    }

    post {
        always {
            echo "Cleaning up test container..."
            sh "docker rm -f ${env.TEST_CONTAINER} || true"
        }

        success {
            echo 'Pipeline completed successfully!'
        }

        failure {
            echo 'Pipeline failed! Check logs.'
        }
    }
}
