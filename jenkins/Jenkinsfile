pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Malikawais108/aws-devops-cicd-project.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("flask-devops-app:v1", "docker")
                }
            }
        }

        stage('Run Container') {
            steps {
                sh 'docker run -d -p 5000:5000 --name flask-app flask-devops-app:v1'
            }
        }

        stage('Health Check') {
            steps {
                sh 'curl http://localhost:5000/health'
            }
        }
    }
}

