pipeline {
    agent any

    environment {
        IMAGE_NAME = "flask-devops-app"
        IMAGE_TAG = "v1"
        DOCKER_CREDENTIALS = "docker-hub-credentials"
    }

    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo "Building Docker image ${IMAGE_NAME}:${IMAGE_TAG}"
                    sh "sudo docker build -t ${IMAGE_NAME}:${IMAGE_TAG} -f docker/Dockerfile ."
                }
            }
        }

        stage('Test Container') {
            steps {
                script {
                    // Use 'def' for local variable
                    def TEST_PORT = sh(script: "shuf -i 5001-5999 -n 1", returnStdout: true).trim()
                    echo "Running test container on port ${TEST_PORT}"

                    // Remove old test container (ignore errors)
                    sh "sudo docker rm -f test-flask-devops-app || true"

                    // Run new test container
                    sh "sudo docker run -d --name test-flask-devops-app -p ${TEST_PORT}:5000 ${IMAGE_NAME}:${IMAGE_TAG}"
                }
            }
        }

        stage('Docker Login & Push') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: "${DOCKER_CREDENTIALS}", usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                        echo "Logging in to Docker Hub..."
                        sh "echo $DOCKER_PASS | sudo docker login -u $DOCKER_USER --password-stdin"

                        echo "Pushing Docker image to Docker Hub..."
                        sh "sudo docker tag ${IMAGE_NAME}:${IMAGE_TAG} ${DOCKER_USER}/${IMAGE_NAME}:${IMAGE_TAG}"
                        sh "sudo docker push ${DOCKER_USER}/${IMAGE_NAME}:${IMAGE_TAG}"
                    }
                }
            }
        }

        stage('Cleanup Test Container') {
            steps {
                script {
                    echo "Cleaning up test container..."
                    sh "sudo docker rm -f test-flask-devops-app || true"
                }
            }
        }
    }

    post {
        always {
            echo "Pipeline finished!"
        }
        success {
            echo "Pipeline succeeded!"
        }
        failure {
            echo "Pipeline failed!"
        }
    }
}
