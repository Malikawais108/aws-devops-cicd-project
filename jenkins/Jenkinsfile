pipeline {
    agent any

    environment {
        IMAGE_NAME = "flask-devops-app"
        IMAGE_TAG = "v1"
    }

    stages {

        stage('Checkout SCM') {
            steps {
                git url: 'https://github.com/Malikawais108/aws-devops-cicd-project.git', branch: 'main'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh "sudo docker build -t ${IMAGE_NAME}:${IMAGE_TAG} -f docker/Dockerfile ."
                }
            }
        }

        stage('Test Container') {
            steps {
                script {
                    // Generate random container name and port
                    env.TEST_CONTAINER = "test-${IMAGE_NAME}-${env.BUILD_NUMBER}"
                    env.TEST_PORT = sh(script: "shuf -i 5001-5999 -n 1", returnStdout: true).trim()
                    echo "Running test container ${env.TEST_CONTAINER} on port ${env.TEST_PORT}"

                    // Remove old container if exists (ignore errors)
                    sh "sudo docker rm -f ${env.TEST_CONTAINER} || true"

                    // Run container
                    sh "sudo docker run -d --name ${env.TEST_CONTAINER} -p ${env.TEST_PORT}:5000 ${IMAGE_NAME}:${IMAGE_TAG}"
                }
            }
        }

        stage('Docker Login & Push') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'docker-hub-credentials', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                        sh """
                            echo "$DOCKER_PASS" | sudo docker login -u "$DOCKER_USER" --password-stdin
                            sudo docker tag ${IMAGE_NAME}:${IMAGE_TAG} $DOCKER_USER/${IMAGE_NAME}:${IMAGE_TAG}
                            sudo docker push $DOCKER_USER/${IMAGE_NAME}:${IMAGE_TAG}
                        """
                    }
                }
            }
        }

        stage('Deploy to Kubernetes (Optional)') {
            steps {
                echo "Deploy to Kubernetes can be added here if required."
            }
        }
    }

    post {
        always {
            echo "Cleaning up test container..."
            sh "sudo docker rm -f ${env.TEST_CONTAINER} || true"
        }

        success {
            echo "Pipeline completed successfully!"
        }

        failure {
            echo "Pipeline failed! Check logs."
        }
    }
}
