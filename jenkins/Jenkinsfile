pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "flask-devops-app:v1"
        TEST_CONTAINER = "test-flask-devops-app-${env.BUILD_NUMBER}"  // Unique name per build
        DOCKER_REGISTRY = "<YOUR_DOCKER_REGISTRY>"                  // Replace if pushing to Docker Hub
        DOCKER_CREDENTIALS = "docker-hub-credentials"              // Jenkins credential ID
    }

    stages {
        stage('Checkout SCM') {
            steps {
                git branch: 'main', url: 'https://github.com/Malikawais108/aws-devops-cicd-project.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh """
                        docker build -t ${DOCKER_IMAGE} -f docker/Dockerfile .
                    """
                }
            }
        }

        stage('Test Container') {
            steps {
                script {
                    // Remove container if exists (safe)
                    sh "docker rm -f ${TEST_CONTAINER} || true"

                    // Run container
                    sh "docker run -d --name ${TEST_CONTAINER} -p 5001:5000 ${DOCKER_IMAGE}"
                }
            }
        }

        stage('Docker Login & Push') {
            when {
                expression { return env.DOCKER_REGISTRY != '' }
            }
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: "${DOCKER_CREDENTIALS}", usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                        sh "echo $DOCKER_PASS | docker login ${DOCKER_REGISTRY} -u $DOCKER_USER --password-stdin"
                        sh "docker tag ${DOCKER_IMAGE} ${DOCKER_REGISTRY}/${DOCKER_IMAGE}"
                        sh "docker push ${DOCKER_REGISTRY}/${DOCKER_IMAGE}"
                    }
                }
            }
        }

        stage('Deploy to Kubernetes (Optional)') {
            when {
                expression { return true }  // Change condition if needed
            }
            steps {
                script {
                    // Replace with your deployment YAML or kubectl commands
                    sh "kubectl apply -f k8s/deployment.yaml"
                }
            }
        }
    }

    post {
        always {
            echo 'Cleaning up test container...'
            sh "docker rm -f ${TEST_CONTAINER} || true"
        }

        success {
            echo 'Pipeline completed successfully!'
        }

        failure {
            echo 'Pipeline failed! Check logs.'
        }
    }
}
