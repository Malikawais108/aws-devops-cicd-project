pipeline {
    agent any

    environment {
        DOCKER_CREDENTIALS_ID = "docker-hub-credentials"
        KUBE_CONFIG = "/var/lib/jenkins/.kube/config"
    }

    stages {

        stage('Checkout SCM') {
            steps {
                echo "Checking out code from Git..."
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Dynamic image tag: version + build number
                    env.IMAGE_TAG = "v1-${env.BUILD_NUMBER}"
                    env.DOCKER_IMAGE = "awaismalak/flask-devops-app:${env.IMAGE_TAG}"
                    echo "Building Docker image ${env.DOCKER_IMAGE}..."
                    sh "docker build -t ${env.DOCKER_IMAGE} -f docker/Dockerfile ."
                }
            }
        }

        stage('Test Container') {
            steps {
                script {
                    // Pick a random test port
                    def TEST_PORT = sh(script: "shuf -i 5001-5999 -n 1", returnStdout: true).trim()
                    env.TEST_PORT = TEST_PORT
                    echo "Running test container on port ${TEST_PORT}..."

                    // Remove old test container if exists
                    sh "docker rm -f test-flask-devops-app || true"

                    // Run the new test container
                    sh "docker run -d --name test-flask-devops-app -p ${TEST_PORT}:5000 ${env.DOCKER_IMAGE}"
                }
            }
        }

        stage('Docker Login & Push') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: "${DOCKER_CREDENTIALS_ID}", 
                    usernameVariable: 'DOCKER_USER', 
                    passwordVariable: 'DOCKER_PASS')]) {
                    
                    echo "Logging in to Docker Hub..."
                    sh "echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin"
                    echo "Pushing Docker image ${env.DOCKER_IMAGE}..."
                    sh "docker push ${env.DOCKER_IMAGE}"
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                echo "Deploying to Kubernetes..."
                withEnv(["KUBECONFIG=${KUBE_CONFIG}"]) {
                    // Update deployment.yaml with the dynamic image tag
                    sh "sed -i 's|image: awaismalak/flask-devops-app:.*|image: ${env.DOCKER_IMAGE}|g' kubernetes/deployment.yaml"

                    // Apply deployment and service
                    sh "kubectl apply -f kubernetes/deployment.yaml"
                    sh "kubectl apply -f kubernetes/service.yaml"

                    // Wait for rollout
                    sh "kubectl rollout status deployment/flask-app"
                }
            }
        }

        stage('Cleanup Test Container') {
            steps {
                echo "Cleaning up test container..."
                sh "docker rm -f test-flask-devops-app || true"
            }
        }

    }

    post {
        always {
            echo "Pipeline finished!"
        }
        failure {
            echo "Pipeline failed! Check logs."
        }
    }
}
